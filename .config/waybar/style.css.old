@define-color foreground #cbd2e7; /* silver */

@define-color color1  #292c36;  /* # ----   */
@define-color color2  #333344;  /* # ---    */
@define-color color3  #474160;  /* # --     */
@define-color color4  #65568a;  /* # -      */
@define-color color5  #b8b8b8;  /* # +      */
@define-color color6  #d8d8d8;  /* # ++     */
@define-color color7  #e8e8e8;  /* # +++    */
@define-color color8  #f8f8f8;  /* # ++++   */
@define-color color9  #f84547;  /* # red    */
@define-color color10 #d28e5d;  /* # orange */
@define-color color11 #efa16b;  /* # yellow */
@define-color color12 #95c76f;  /* # green  */
@define-color color13 #64878f;  /* # cyan   */
@define-color color14 #8485ce;  /* # blue   */
@define-color color15 #b74989;  /* # purple */
@define-color color16 #986841;  /* # brown  */

* {
    border: none;
    border-radius: 0;
    font-family: Roboto, Helvetica, Arial, sans-serif;
    font-size: 16px;
    min-height: 0;
}

window#waybar {
    background: rgba(43, 48, 59, 0.7);
    border-bottom: 6px solid transparent;
    color: @foreground;
}

#workspaces button {
    padding: 0 5px;
    background: rgba(43, 48, 59, 0.8);
    color: @foreground;
    border-bottom: 3px solid transparent;
}

#workspaces button.focused {
    background: rgba(100, 114, 125, 0.2);
    border-bottom: 3px solid @color15;
}

#mode {
    background: transparent;
    border-bottom: 3px solid @color15;
}

#clock, #battery, #cpu, #memory, #network, #pulseaudio, #custom-spotify, #tray, #mode, #custom-temp, #custom-root, #custom-home, #custom-backup, #custom-scratch, #custom-main {
    padding: 0 6px;
    margin: 0 3px;
}

#clock {
    background-color: transparent;
    border-bottom: 5px solid @color1;
    color: @foreground;
}

#battery {
    background-color: #ffffff;
    color: black;
}

#battery.charging {
    color: white;
    background-color: #26A65B;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    background: #f53c3c;
    color: white;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#cpu {
    background: transparent;
    border-bottom: 1px solid @color5;
    color: @foreground;
}

#memory {
    background: transparent;
    border-bottom: 1px solid @color7;
    color: @foreground;
}

#network {
    background: transparent;
    border-bottom: 1px solid @color16;
    color: @foreground
}

#network.disconnected {
    background: transparent;
    color: crimson;
}

#pulseaudio {
    background: transparent;
    border-bottom: 1px solid @color15;
    color: @foreground;
}

#pulseaudio.muted {
    background: #90b1b1;
    color: #2a5c45;
}

#custom-spotify {
    background: #66cc99;
    color: #2a5c45;
}

#tray {
    background-color: transparent;
    border-bottom: 1px solid @color15;
}

#custom-root { 
    background: transparent;
    border-bottom: 1px solid @color9;
}

#custom-temp {
    background: transparent;
    border-bottom: 1px solid @color5;
}

#custom-home { 
    background: transparent;
    border-bottom: 1px solid @color9;
}

#custom-main { 
    background: transparent;
    border-bottom: 1px solid @color10;
}

#custom-backup { 
    background: transparent;
    border-bottom: 1px solid @color10;
}

#custom-scratch { 
    background: transparent;
    border-bottom: 1px solid @color11;
}

